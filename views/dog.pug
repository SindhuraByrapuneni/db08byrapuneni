extends layout

block content
  h1= title 
  p Sindhura Byrapuneni
  div(class="container-fluid")
        div(class="row")
            -
                let watch = [
                    {
                        "Brand": "Bulldog",
                        "price": 500,
                        "color": "white"
                    },
                    {
                        "Brand": "Pug",
                        "price": 1000,
                        "color": "Black"
                    },
                    {
                        "Brand": "Siberian Husky",
                        "price": 900,
                        "color": "grey"
                    },                  
                     {
                        "Brand": "Golden Retriever",
                        "price": 1500,
                        "color": "golden"
                    },    
                     {
                        "Brand": "Labrador Retriever",
                        "price": 2000,
                        "color": "brown"
                    },     
                ]
            each v,index in watch  
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.Brand}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.price}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.color}
                
  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }